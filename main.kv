<BaseConverter>:
    number: number 
    base: base
    output: output

    GridLayout:
        cols: 1

        GridLayout:
            cols: 2

            Label:
                text: "NUMBER"
                font_size: 40

            Label:
                text: "BASE"
                font_size: 40

            TextInput:
                id: number
                font_size: 40
                multiline: False
               
            TextInput:
                id: base
                font_size: 40
                multiline: False
               


        Button:
            text: "CLICK TO CONVERT"
            font_size: 40
            on_press: root.output_ui()

        Label:
            id: output
            text:""
            font_size: 40

        Button:
            text: "go to calculator"
            font_size: 35 
            on_press: 
                root.manager.current ="calculator"
                root.manager.transition.direction = "left"


<Calculator>:
    answer: answer
    GridLayout:
        cols:1

        GridLayout:
            cols: 1
            
            TextInput:
                id: answer
                font_size: 55
                multiline: False

        GridLayout:
            cols: 4

            Button:
                text: "+"
                on_press: answer.text += "+"
                font_size: 20

            Button:
                text: "-"
                on_press: answer.text += "-"
                font_size: 20


            Button:
                text: "x"
                on_press: answer.text += "*"
                font_size: 20


            Button:
                text: "/"
                on_press: answer.text += "/"
                font_size: 20


            Button:
                text: "1"
                on_press: answer.text +="1"
                font_size: 20


            Button:
                text: "2"
                on_press: answer.text += "2"
                font_size: 20


            Button:
                text: "3"
                on_press: answer.text += "3"
                font_size: 20


            Button:
                text: "0"
                on_press: answer.text += "0"
                font_size: 20



            Button:
                text: "4"
                on_press: answer.text += "4"
                font_size: 20



            Button:
                text: "5"
                on_press: answer.text += "5"
                font_size: 20



            Button:
                text: "6"
                on_press: answer.text += "6"
                font_size: 20



            Button:
                text: "AC"
                on_press: answer.text = ""
                font_size: 20



            Button:
                text: "7"
                on_press: answer.text += "7"
                font_size: 20



            Button:
                text: "8"
                on_press: answer.text += '8'
                font_size: 20

            Button:
                text: "9"
                on_press: answer.text += '9'
                font_size: 20

            Button:
                text: "="
                on_press: root.display()
                font_size: 20

        Button:
            text: 'Go Back to the binary converter '
            font_size: 30
            on_press:
                root.manager.current = "base_converter"
                root.manager.transition.direction = "right"

        